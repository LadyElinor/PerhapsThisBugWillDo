{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Weevil-Lunar Data Contracts",
  "type": "object",
  "required": ["foot_state", "terrain_patch", "health_state", "locomotion_command"],
  "properties": {
    "foot_state": {
      "type": "object",
      "required": [
        "foot_id",
        "anchored",
        "preload_N",
        "slip_ratio",
        "penetration_depth_cm",
        "margin_downslope",
        "margin_lateral"
      ]
    },
    "terrain_patch": {
      "type": "object",
      "required": ["regolith_class", "slope_deg", "confidence"]
    },
    "health_state": {
      "type": "object",
      "required": [
        "joint_torque_margin",
        "thermal_margin",
        "actuator_friction_index",
        "degraded_mode"
      ]
    },
    "locomotion_command": {
      "type": "object",
      "required": ["gait_mode", "target_velocity_mps", "duty_factor", "preload_schedule"]
    }
  }
}
